@model IEnumerable<Blog_App_Simple.Models.category>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-primary">Create Category</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.categoryId" class="btn btn-info" style="font-size:10px;"><i class="bi bi-pen"></i></a>
                    <a asp-action="Details" asp-route-id="@item.categoryId" class="btn btn-primary" style="font-size:10px;"><i class="bi bi-journals"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.categoryId" class="btn btn-danger" style="font-size:10px;"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
