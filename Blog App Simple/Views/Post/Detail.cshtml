@model Blog_App_Simple.Models.Post

@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <h1 class="mb-4">Post Detail</h1>

    <div class="row">
        <div class="col-md-8">
            <dl class="row">

                <dd hidden class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                <dd hidden class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</dd>
                <h1 class="col-sm-9" style="color:red;">@Html.DisplayFor(model => model.Title)</h1>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/images/@Model.Image" class="img-fluid" alt="Post Image" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </dd>

                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.category.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
