@model IEnumerable<Post>
@{
    ViewData["Title"] = "post";
}

<div class="text-center">
    <h1>Posts Page :</h1>
    <hr />
    <br />
    @if (Model != null)
    {
        <div class="grid ">
            @foreach (var item in Model)
            {
                <div class="card border-primary mb-3" style="max-width: 30rem;">
                    <div class="card-header">@item.Title</div>
                    <div class="contenu">
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="card-body">
                                <p class="card-text">@item.ShortDescription</p>
                                <p class="text-start mt-3">Category : <span>@item.category.Name</span> </p>
                            </div>
                            <img src="./images/@item.Image" class="m-3" width="100px" />
                        </div>
                        <div class="action">
                            <div class="btns">
                                <a href="@Url.Action("Detail", new { id = item.Id })">
                                    <button type="button" class="btn btn-primary"><i class="bi bi-journals"></i></button>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.Id })">
                                    <button type="button" class="btn btn-info"><i class="bi bi-pen"></i></button>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })">
                                    <button type="button" class="btn btn-danger"><i class="bi bi-trash3"></i></button>
                                </a>
                            </div>
                            <p>@item.Date.ToString("dd-MMMM-yyyy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No posts available.</p>
    }
</div>

